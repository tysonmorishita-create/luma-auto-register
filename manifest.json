{
  "manifest_version": 3,
  "name": "Luma Auto Register",
  "version": "1.0.0",
  "description": "Automatically register for multiple Luma events from calendar pages",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://lu.ma/*",
    "https://luma.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://lu.ma/*", "https://luma.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
